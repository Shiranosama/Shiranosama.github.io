if hexo-config('error_404.enable')
  .type-404
    .error-content
      @extend .cardHover
      overflow: hidden
      margin: 0 20px
      height: 360px
      display: flex
      flex-direction: row

      +maxWidth768()
        margin: 0
        height: 500px
        flex-direction: column

      .terminal
        width: 50%
        height: 100%
        background: #282C34
        border-radius: 8px
        overflow: hidden
        box-shadow: 0 10px 30px rgba(0,0,0,0.3)
        display: flex
        flex-direction: column

        +maxWidth768()
          width: 100%
          height: 45%
          border-radius: 8px 8px 0 0
      
      .terminal-header
        background: #21252b
        padding: 10px 20px
        display: flex
        align-items: center

        .terminal-buttons
          display: flex
          gap: 8px

          span
            display: inline-block
            width: 12px
            height: 12px
            border-radius: 50%

            &.close { background: #e06c75 }
            &.minimize { background: #98c379 }
            &.maximize { background: #61afef }
        
        .terminal-title
          color: #DCDFE4
          font-size: 0.8em
          margin-left: 10px

      .terminal-body
        flex: 1
        padding: 20px
        overflow-y: auto
        color: #DCDFE4
        font-size: 1.3em
        line-height: 1.25em

        .terminal-line
          margin-bottom: 8px
          display: flex
          align-items: baseline

          .prompt
            color: #61afef
            margin-right: 8px
            flex-shrink: 0
            font-weight: bold
          
          .404text
            flex-grow: 1
            white-space: pre-wrap
            word-break: break-word

          .terminal-link
            color: #FF7CAF
            text-decoration: none
            margin:0 4px

            &:hover
              text-decoration: underline

            &:hover
              color: #e06c75

      .error-info
        display: inline-flex
        flex-direction: column
        justify-content: center
        align-content: center
        width: 50%
        height: 100%
        vertical-align: top
        text-align: center

        if $site-name-font
          font-family: $site-name-font

        +maxWidth768()
          width: 100%
          height: 55%

        .error_title
          margin-top: -.6em
          font-size: 9em

          +maxWidth768()
            font-size: 8em
          
          &:hover
            animation: jumpText 0.8s ease-in-out

        .error_subtitle
          @extend .limit-more-line
          margin-top: -3em
          word-break: break-word
          font-size: 1.6em
          -webkit-line-clamp: 2
          color: #DCDFE4

    .nc
      margin-top: 5%
      padding: 0 20px

    #footer
      display: none

    & + #rightside
      display: none

@keyframes jumpText {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-100px) rotate(360deg) scale(1.1);
  }
  100% {
    transform: translateY(0) rotate(0deg) scale(0);
  }
}